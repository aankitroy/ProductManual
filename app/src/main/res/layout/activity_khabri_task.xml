<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <Switch
            android:id="@+id/lgSwitch"
            android:layout_width="76dp"
            android:layout_height="59dp"
            android:checked="true"
            android:padding="22dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/micIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_mic_android"
            android:elevation="4.5dp"
            app:layout_constraintBottom_toBottomOf="@+id/listenContainer"
            app:layout_constraintLeft_toLeftOf="@+id/listenContainer"
            app:layout_constraintRight_toRightOf="@+id/listenContainer"
            app:layout_constraintTop_toTopOf="@+id/listenContainer" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/listenContainer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="68dp"
            android:background="@drawable/ic_mic_android"
            app:cardCornerRadius="40dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="22sp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="@id/listenContainer"
            app:layout_constraintRight_toRightOf="@id/listenContainer"
            app:layout_constraintTop_toBottomOf="@+id/listenContainer"
            tools:text="Stop " />

        <ImageView
            android:id="@+id/philips"
            android:layout_width="166dp"
            android:layout_height="149dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/philips"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="28dp"
            android:text="English"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lgSwitch" />

        <TextView
            android:id="@+id/answer"
            android:layout_width="wrap_content"
            android:layout_height="380dp"
            android:padding="10dp"
            android:scrollbars="vertical"
            android:textColor="@color/black"
            android:fadeScrollbars="false"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/listenContainer"
            app:layout_constraintTop_toBottomOf="@+id/seeQuestions"
            tools:layout_editor_absoluteX="1dp"
            tools:text="TextView" />

        <ImageView
            android:id="@+id/airpurifierIcon"
            android:layout_width="266dp"
            android:layout_height="219dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seeQuestions"
            app:srcCompat="@drawable/philips_air_purifier" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/downArrow"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toTopOf="@+id/listenContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Instruction"
            app:lottie_loop="true"
            app:lottie_speed="1"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/Instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instruct"
            app:layout_constraintBottom_toTopOf="@+id/listenContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/airpurifierIcon"
            tools:text="TextView" />

        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/productName"
            app:layout_constraintBottom_toTopOf="@+id/Instruction"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/airpurifierIcon"
            tools:text="temporary" />

        <Button
            android:id="@+id/seeQuestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seeQuestions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/philips" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/questionlist"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:visibility="gone"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@+id/listenContainer"
            app:layout_constraintTop_toBottomOf="@+id/seeQuestions" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>